<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.jieli.finalproject1.MainActivity">

    <TextView
        android:id="@+id/smart_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Smart Home  "
        android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/smart_home"
        android:layout_marginStart="14dp"
        android:layout_marginTop="22dp"
        android:columnCount="2"
        android:rowCount="2"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="false"
        android:layout_centerInParent="false"
        tools:layout_centerVertical="false">

        <Button
            android:id="@+id/living_room"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/activity1"
            android:textAppearance="@style/TextAppearance.AppCompat.Menu"
            android:visibility="visible"
            tools:layout_gravity="fill"
            tools:layout_rowWeight="1" />

        <Button
            android:id="@+id/kitchen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/activity2"
            android:textAppearance="@style/TextAppearance.AppCompat.Menu"
            tools:layout_gravity="fill"
            tools:layout_rowWeight="1"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="27dp" />

        <Button
            android:id="@+id/house"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/activity3"
            android:textAppearance="@style/TextAppearance.AppCompat"
            tools:layout_gravity="fill"
            tools:layout_rowWeight="1"
            android:layout_below="@+id/living_room"
            android:layout_alignEnd="@+id/living_room"
            android:layout_marginTop="89dp" />

        <Button
            android:id="@+id/automobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/activity4"
            android:textAppearance="@style/TextAppearance.AppCompat"
            tools:layout_gravity="fill"
            tools:layout_rowWeight="1"
            android:layout_alignBottom="@+id/house"
            android:layout_alignStart="@+id/kitchen" />


    </RelativeLayout>

</RelativeLayout>
